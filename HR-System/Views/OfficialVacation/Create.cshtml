@model HR_System.ViewModels.OfficialVacationVM

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div class="container-fluid position-relative d-flex p-0">
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 80vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="form-group">
                            <label asp-for="VacationName" class="control-label"></label>
                            <input asp-for="VacationName" class="form-control" />
                            <span asp-validation-for="VacationName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="VacationDay" class="control-label"></label>
                            <input asp-for="VacationDay" class="form-control" />
                            <span asp-validation-for="VacationDay" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Users";
}

<a asp-action="AddUser" asp-controller="Users" class="btn btn-primary">Add New User</a>

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">System Users</h2>
    </div>
</div>
<div class="container-fluid position-relative d-flex p-0">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 50vh;">

            <table class="table table-striped table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            User Id
                        </th>
                        <th scope="col">
                            User Name
                        </th>
                        <th scope="col">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-primary">
                            <td scope="row" width="30%">
                                @item.Id
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                <a asp-controller="Roles" asp-action="addRoles" asp-route-userId="@item.Id" class="btn btn-sm btn-success">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>




